function surfaceb(order,ax,bx,ay,by,xval,yval,theta)
%make meshgrid of x and y values 
[xx,yy] = meshgrid(xval,yval);
%call tensor product bspline function to get zz- the tenosr prodcut of x
%and y 
zz = tensorproductbspline(order,ax,bx,ay,by,xx,yy);
Z_plot = zz*theta;
% plotting surface map
Z_min = min(Z_plot);
Z_min_min = min(Z_min);
if Z_min_min < 0 
    Z_plot = Z_plot + abs(Z_min_min)*ones(length(xval),length(yval));
end
contourf(xx,yy,Z_plot,30,'LineWidth',0.5); hold on;
p = surf(xx,yy,Z_plot); hold on;
shading interp
alpha(p,0.4);
a_min = min(min(Z_plot));
a_max = max(max(Z_plot));
caxis([a_min a_max]); 

%Labels
title('Surface plot');
xlabel('x');
ylabel('y');
zlabel('z');
end 
